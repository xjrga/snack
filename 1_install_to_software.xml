<project default="run">
    <xmlproperty file="pom.xml" prefix="pom" />
    <tstamp>
        <format property="tstamp" pattern="yyyy-MM-dd HH:mm:ss"/>
    </tstamp>
    <target name="clean">
        <exec executable="mvn">
            <env key="JAVA_HOME" value="/usr/lib/jvm/default-java"/>
            <arg line="clean"/>
        </exec>
    </target>
    <target name="package" depends="clean">
        <exec executable="mvn">
            <env key="JAVA_HOME" value="/usr/lib/jvm/default-java"/>
            <arg line="package"/>
        </exec>
    </target>
    <target name="unzip" depends="package">
        <delete dir="${user.home}/Software/${pom.project.artifactId}-${pom.project.version}/"/>
        <unzip src="target/${pom.project.artifactId}-${pom.project.version}-app.zip" dest="${user.home}/Software/" overwrite="true"/>
        <echo message="Unzipped to software directory on ${tstamp}"/>
    </target>
    <target name="run" depends="unzip"/>
</project>
