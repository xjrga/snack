<project default="run">
	<xmlproperty file="pom.xml" prefix="pom" />
	<tstamp>
		<format property="timestamp" pattern="yyyy-MM-dd-HH-mm" />
	</tstamp>
	<!-- make project backup -->
	<target name="backup" depends="clean">
		<echo>
			Backup files to
			../backups/${pom.project.name}_${pom.project.version}_${timestamp}.tgz</echo>
		<exec executable="tar">
			<arg line="czfv" />
			<arg line="../backups/'${pom.project.name}'_'${pom.project.version}'_'${timestamp}'.tgz" />
			<arg line="." />
		</exec>
	</target>
	<target name="clean">
		<exec executable="mvn">
			<env key="JAVA_HOME" value="/usr/lib/jvm/default-java" />
			<arg line="clean" />
		</exec>
	</target>
	<target name="run" depends="backup" />
</project>
