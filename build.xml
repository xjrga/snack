<project default="3. package">    
    <target name="1. resolve">
	<exec executable="mvn">
	    <arg value="dependency:resolve"/>	    
	</exec>
    </target>    
    <target name="2. compile">
	<exec dir="." executable="sh">
	    <arg value="-c"/>
	    <arg line="'export JAVA_HOME=/usr/lib/jvm/default-java;mvn clean compile'"/>	    
	</exec>
    </target>
    <target name="3. package">
	<exec executable="sh">
	    <arg line="-c 'export JAVA_HOME=/usr/lib/jvm/default-java;mvn clean package'"/>	        
	</exec>	
    </target>
    <target name="4. install">
	<exec executable="sh">
	    <arg line="-c 'export JAVA_HOME=/usr/lib/jvm/default-java;mvn clean install'"/>	        
	</exec>	
    </target>
    <target name="5. deploy">
	<exec executable="sh">
	    <arg line="-c 'export JAVA_HOME=/usr/lib/jvm/default-java;mvn clean deploy'"/>	        
	</exec>	    
    </target>
    <target name="6. test">
	<exec executable="sh">
	    <arg line="-c 'export JAVA_HOME=/usr/lib/jvm/default-java;mvn clean test'"/>	        
	</exec>	    
    </target>
    <target name="7. verify">
	<exec executable="sh">
	    <arg line="-c 'export JAVA_HOME=/usr/lib/jvm/default-java;mvn clean verify'"/>	        
	</exec>	    
    </target>       
</project>
